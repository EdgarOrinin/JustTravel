<Window x:Class="TravelAroundRussia.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Путешествуй по России"
        Width="450"
        MinWidth="450"
        Height="200"
        MinHeight="200"
        ResizeMode="CanMinimize">
    <StackPanel Width="140"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <Button Content="Туры"
                Click="OpenTourListWindow"
                Height="24"
                Margin="0,0,0,16" />
        <Button Content="Отели"
                Click="OpenHotelListWindow"
                Height="24" />
    </StackPanel>
</Window>
